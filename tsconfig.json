{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "bundler",
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "server.ts"],
    "exclude": ["node_modules", "**/*.test.ts", "dist"]
  }
