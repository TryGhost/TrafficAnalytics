{
  "name": "traffic-analytics",
  "version": "0.0.0",
  "repository": "git@github.com:TryGhost/TrafficAnalytics.git",
  "author": "Ghost Foundation",
  "license": "MIT",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "docker:build": "docker compose build",
    "dev": "vite",
    "docker:dev": "docker compose up",
    "docker:dev:ghost": "docker compose -f compose.yml -f compose.ghost.yml up",
    "start": "node dist/server.js",
    "pretest": "yarn build",
    "test:unit": "NODE_ENV=testing vitest run --coverage",
    "test:unit:watch": "NODE_ENV=testing vitest watch",
    "test": "yarn test:unit",
    "docker:test": "docker compose run --rm test",
    "lint": "eslint src/ test/ --ext .js,.ts --cache",
    "lint:fix": "eslint src/ test/ --ext .js,.ts --cache --fix",
    "docker:lint": "docker compose run --rm lint",
    "preship": "yarn test",
    "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/dotenv": "8.2.3",
    "@types/node": "22.15.29",
    "@types/ua-parser-js": "0.7.39",
    "@vitest/coverage-v8": "3.2.1",
    "eslint": "8.57.1",
    "eslint-plugin-ghost": "3.4.3",
    "supertest": "6.3.4",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vite-plugin-node": "5.0.1",
    "vitest": "3.2.1"
  },
  "dependencies": {
    "@fastify/cors": "11.0.1",
    "@fastify/http-proxy": "11.1.2",
    "@tryghost/errors": "1.3.8",
    "@tryghost/referrer-parser": "0.1.5",
    "dotenv": "16.5.0",
    "fastify": "5.3.3",
    "pino-pretty": "10.3.1",
    "ua-parser-js": "1.0.40"
  }
}
