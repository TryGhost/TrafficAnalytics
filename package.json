{
  "name": "traffic-analytics",
  "version": "0.0.6",
  "repository": "git@github.com:TryGhost/TrafficAnalytics.git",
  "author": "Ghost Foundation",
  "license": "MIT",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "yarn build:server && yarn build:worker",
    "build:server": "vite build --config vite.config.server.ts",
    "build:worker": "vite build --config vite.config.worker.ts",
    "docker:build": "docker compose build",
    "dev": "tsx watch server.ts",
    "dev:worker": "tsx watch worker.ts",
    "docker:dev": "docker compose up",
    "docker:dev:ghost": "docker compose -f compose.yml -f compose.ghost.yml up",
    "start": "node dist/server/server.js",
    "start:worker": "node dist/worker/worker.js",
    "pretest": "yarn build",
    "test:unit": "NODE_ENV=testing vitest run test/unit --coverage",
    "test:unit:watch": "NODE_ENV=testing vitest watch test/unit",
    "test:integration": "NODE_ENV=testing vitest run --config vitest.config.integration.ts",
    "test:integration:watch": "NODE_ENV=testing vitest watch --config vitest.config.integration.ts",
    "test:types": "tsc --noEmit",
    "test": "yarn test:types && yarn test:unit && yarn test:integration",
    "docker:test": "docker compose run --rm test",
    "test:healthchecks": "playwright test",
    "lint": "eslint src/ test/ scripts/ *.ts --ext .js,.ts --cache",
    "lint:fix": "eslint src/ test/ scripts/ *.ts --ext .js,.ts --cache --fix",
    "docker:lint": "docker compose run --rm lint",
    "ship": "node scripts/ship.js"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@playwright/test": "1.53.1",
    "@types/dotenv": "8.2.3",
    "@types/node": "24.0.3",
    "@types/supertest": "6.0.3",
    "@types/ua-parser-js": "0.7.39",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "8.57.1",
    "eslint-plugin-ghost": "3.4.3",
    "pino-pretty": "13.0.0",
    "playwright": "1.53.1",
    "supertest": "6.3.4",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vite-plugin-node": "5.0.1",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "@fastify/cors": "11.0.1",
    "@fastify/http-proxy": "11.2.0",
    "@google-cloud/firestore": "7.11.1",
    "@google-cloud/pino-logging-gcp-config": "1.0.6",
    "@google-cloud/pubsub": "5.1.0",
    "@tryghost/config": "0.2.27",
    "@tryghost/errors": "1.3.8",
    "@tryghost/referrer-parser": "0.1.7",
    "fastify": "5.4.0",
    "fastify-plugin": "5.0.1",
    "pino": "9.7.0",
    "ua-parser-js": "1.0.40"
  }
}
