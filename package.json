{
  "name": "traffic-analytics",
  "version": "0.0.0",
  "repository": "git@github.com:TryGhost/TrafficAnalytics.git",
  "author": "Ghost Foundation",
  "license": "MIT",
  "main": "server.js",
  "scripts": {
    "dev": "node server.js",
    "dev:watch": "nodemon --watch src --watch server.js server.js",
    "test:unit": "NODE_ENV=testing c8 --all --include 'src/**' --reporter text --reporter cobertura mocha './test/**/*.test.js'",
    "test": "yarn test:unit",
    "lint:code": "eslint *.js src/ test/ --ext .js --cache",
    "lint": "yarn lint:code",
    "preship": "yarn test",
    "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
  },
  "files": [
    "server.js",
    "src"
  ],
  "devDependencies": {
    "c8": "10.1.3",
    "eslint": "8.57.1",
    "eslint-plugin-ghost": "3.4.0",
    "mocha": "11.1.0",
    "nodemon": "^3.1.9",
    "sinon": "20.0.0",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "@fastify/cors": "^8.3.0",
    "@fastify/http-proxy": "^9.0.0",
    "dotenv": "^16.4.7",
    "fastify": "^4.19.0",
    "pino-pretty": "^10.0.0"
  }
}
